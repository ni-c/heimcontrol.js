div.container
  h1 Settings
  h2 Wake-on-LAN
  - if (typeof(success) !== 'undefined')
    div.alert.alert-success.fade.in
      button.close(type="button", data-dismiss="alert") Ã—
      =success
  div.row16
    form(action="/settings/wakeonlan", method="post")
      div#wakeonlan
        each item in items
          div.plugin-container.wakeonlan(id="#{item._id}", style=(item.mac == '' ? 'display: none;' : ''))
            label(for="description") Description (optional):
            input(type="text", name="data[description][]", placeholder="iMac", value=(typeof(item.description) == 'undefined' ? '' : item.description))
            label(for="host") Hostname / IP:
            input(type="text", name="data[host][]", placeholder="hostname", required="1", value="#{item.host}")
            label(for="mac") MAC-Address:
            input.uppercase(type="text", name="data[mac][]", placeholder="12:34:56:78:90:AB", required="1", pattern="^([0-9A-F]{2}[:-]){5}([0-9A-F]{2})$", value="#{item.mac}", maxlength="17")
            input(type="hidden", name="data[_id][]", value="#{item._id}")
            button.btn.btn-danger.pull-right.delete(type="button",data-delete="#{item._id}")
              i.icon-trash.icon-large
              |  Delete
          
      p.wakeonlan.buttons
        button.btn.btn-info.add(data-target="wakeonlan", type="button") 
          i.icon-plus.icon-large
          |  Add
      
        button.btn.btn-success.save(type="submit") 
          i.icon-save.icon-large
          |  Save
      
div.plugin-container.wakeonlan.settings#template(style="display: none;")
  label(for="description") Description (optional):
  input(type="text", name="data[description][]", placeholder="iMac")
  label(for="host") Hostname / IP:
  input(type="text", name="data[host][]", placeholder="hostname", required="1")
  label(for="mac") MAC-Address:
  input.mac(type="text", name="data[mac][]", placeholder="12:34:56:78:90:AB", required="1", pattern="^([0-9A-F]{2}[:-]){5}([0-9A-F]{2})$", maxlength="17")
  button.btn.btn-danger.pull-right.delete(type="button")
    i.icon-trash.icon-large
    |  Delete